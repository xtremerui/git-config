[user]
	name = Rui Yang
	email = ruiya@vmware.com
[alias]
	co = checkout
	br = branch
	ci = commit -s
	st = status
        lg  = log --graph --pretty=format:'%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) %C(cyan)<%an>%Creset' --abbrev-commit
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	editor = nvim
	email = ruiya@vmware.com
